BoxLayout:
    orientation: "vertical"
    BoxLayout:
        id: main
        size_hint: 1, 1
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        canvas:
            Color:
                rgba: 1, 1, 0, 1
            Rectangle:
                size: self.size
                pos: self.pos
            Color:
                rgb: 1, 1, 1


    Scatter:
        id: scatter_widget
        do_scale: False
        BoxLayout:
            size: 100, 100
            color: (1, 1, 1, 1)
            text: "Help"
            canvas:
                Color:
                    rgb: 1, 0, 1
                Ellipse:
                    size: self.size
                    pos: self.pos






