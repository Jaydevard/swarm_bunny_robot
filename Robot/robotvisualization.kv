GridLayout:
    cols:2
    rows:1
    size: root.size
    pos: root.pos
    # Left Column
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.2, 1
        padding: 10
        spacing: 20
        Button:
            text: "Button 0"
            pos_hint:{"top":0.5}
        Button:
            text: "Button 1"
        Button:
            text: "Button 2"
    # Right Column
    RobotCanvas:
        size_hint: 1, 1
        orientation: 'vertical'
        spacing: 10
        padding: 10
        BoxLayout:
            size_hint: 1, 0.1
            pos_hint: {"top":1}
            orientation: 'horizontal'
            Button:
                text: "Button 3"
                size_hint:1, 1
            Button:
                size_hint: 1, 1
                text: "Button 4"
            Button:
                size_hint: 1, 1
                text: "Button 5"
        BoxLayout:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "board.png"
            canvas:
                Ellipse:
                    size: 50, 50
                    pos: self.pos[0]+self.width/2, self.pos[1]+self.height/2
































