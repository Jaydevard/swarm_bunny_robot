<StatusBar>:
    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: self._background_image

    spacing: 1
    rows: 1
    cols: 4
    battery_image: battery_image
    wifi_status: wifi_status
    _state: _state
    speed: speed
    size_hint: 1, 1
    # (r:1, c:1)
    BoxLayout:
        size_hint: 1, 1
        pos_hint: {"center_x": 0.5, "center_y":0.5}
        Label:
            id: speed
            size_hint: 1,1
            pos_hint: {"center_x": 0.5, "center_y":0.5}
            text: "Speed:\n 65 cm/s"


    BoxLayout:
        size_hint: 1, 1
        pos_hint: {"center_x": 0.5, "center_y":0.5}
        Image:
            id: _state
            size_hint: 1, 1
            pos_hint: {"center_x": 0.5, "center_y":0.5}
            orientation: "horizontal"
            source: self.parent.parent._state_image


    # (r:1, c:3)
    BoxLayout:
        size_hint: 1, 1
        pos_hint: {"center_x": 0.5, "center_y":0.5}
        orientation: "horizontal"

        Image:
            id: battery_image
            pos: self.pos
            mipmap: True

    # (r:1, c:4)
    BoxLayout:
        size_hint: 1, 1
        pos_hint: {"center_x": 0.5, "center_y":0.5}
        Image:
            id: wifi_status
            pos: self.pos
            size: self.size
            source: self.parent.parent._wifi_image
            on_touch_down: self.parent.parent.call_me()







